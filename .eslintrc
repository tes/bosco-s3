{
  "extends": "airbnb/legacy",
  "rules": {
    "vars-on-top": 0,
    "id-length": 0,
    "func-names": 0,
    "no-shadow": [2, {"allow": ["next", "err"]}],
    "global-require": 0,
    "max-len": 0,
    "consistent-return": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "no-mixed-operators": 0,
    "no-plusplus": 0,
    "no-useless-escape": 0,
    "no-template-curly-in-string": 0,
    "no-multi-assign": 0,
    "no-path-concat": 0,
    "no-buffer-constructor": 0
  }
}
